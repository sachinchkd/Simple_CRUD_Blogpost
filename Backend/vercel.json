{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "DATABASE_URL": "sqlite:///instance/blog_posts.db",
    "CORS_ALLOWED_ORIGINS": "http://localhost:3000"
  }
}
